{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "skipLibCheck": true,
        "noEmit": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "lib": [
            "ESNext"
        ],
        "types": [
            "bun-types"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@/features/*": [
                "src/features/*"
            ],
            "@/shared/*": [
                "src/shared/*"
            ],
            "@/infrastructure/*": [
                "src/infrastructure/*"
            ],
            "@/config/*": [
                "src/config/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}